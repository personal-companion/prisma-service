{
  "name": "@personal-companion/prisma-service",
  "version": "1.0.1",
  "description": "Prisma service for personal companion server",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/personal-companion/prisma-service.git"
  },
  "keywords": [
    "companion",
    "personal",
    "prisma"
  ],
  "author": "@personal-companion/jdelgad8",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/personal-companion/prisma-service/issues"
  },
  "homepage": "https://github.com/personal-companion/prisma-service#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma-generate": "npx prisma generate --accelerate",
    "prisma-migrate-dev": "npx prisma migrate dev",
    "prisma-seed": "npx prisma db seed"
  },
  "dependencies": {
    "@apollo/server": "^4.9.2",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.2.2",
    "@nestjs/core": "^10.2.2",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/platform-express": "^10.2.2",
    "@prisma/client": "^5.2.0",
    "@prisma/extension-accelerate": "^0.6.2",
    "class-validator": "^0.14.0",
    "graphql": "^16.8.0",
    "graphql-tools": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.16",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "prisma": "^5.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "rootDir": "src"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "postinstall": "tsc && cp src/index.d.ts dist/index.d.ts && npx prisma@5.2.0 generate",
  "publishConfig": {
    "@jdelgad93:registry": "https://npm.pkg.github.com"
  }
}
